{% macro primary(text='', url='#') %}
<a href="{{ url }}"
   class="inline-block bg-scarlet-700 py-2 px-3 text-gray-100 font-semibold rounded-lg rambla text-sm tracking-wide shadow hover:shadow-none hover:bg-scarlet-800"
>{{ text }}</a>
{% endmacro %}

{% macro secondary(text='', url='#') %}
<a href="{{ url }}" class="text-scarlet-700 font-semibold rambla text-sm tracking-wide hover:underline">{{ text }}</a>
{% endmacro %}


{% macro primary_title(text) %}
<h2 class="khand text-scarlet-700 text-4xl">{{ text }}</h2>
{% endmacro %}
